{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["package.json", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "crlf"
	},
	"linter": {
		"ignore": ["process-env.d.ts"],
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useNamingConvention": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"noConsoleLog": "off"
			},
			"correctness": {
				"noNodejsModules": "off"
			},
			"complexity": {
				"useSimplifiedLogicExpression": "off"
			}
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	}
}
